    <button type="button" class="btn red" id="btn_act_signos" name="btn_act_signos" onclick="GuardarSignosVitales();" >Registrar</button> 
</div>
{%else%}
<div class="col-md-6" style="padding-bottom: 10px;" >
    <label class="control-label">Frecuencia Cardiaca</label>
    <input type="number" placeholder="FRECUENCIA CARDIACA" class="form-control" id="txtfcardicac" name="txtfcardiaca" disabled value="{{LstSignos.ateFreCardiaca}}">
</div>
<div class="col-md-6" style="padding-bottom: 10px;">
    <label class="control-label">Frecuencia Respiratoria</label>
    <input type="number" placeholder="FRECUENCIA RESPIRATORIA" class="form-control" id="txtfrespiratoria" name="txtfrespiratoria" disabled value="{{LstSignos.ateFreRespiratoria}}">
</div>
<div class="col-md-6" style="padding-bottom: 10px;" >
    <label class="control-label">Presion Arterial</label>
    <input type="number" placeholder="PRESION ARTERIAL" class="form-control" id="txtparterial" name="txtparterial" disabled value="{{LstSignos.ateFreArterial}}">
</div>
<div class="col-md-6" style="padding-bottom: 10px;">
    <label class="control-label">Temperatura</label>
    <input type="number" placeholder="TEMPERATURA" class="form-control" id="txttemperatura" name="txttemperatura" disabled value="{{LstSignos.ateTemperatura}}">
</div>
{%endif%}


<script type="text/javascript">
    jQuery('#txtfcardiaca, #txtfrespiratoria, #txtparterial, #txttemperatura').on('keypress', function (e) {

        if (e.keyCode == 101 || e.keyCode == 45 || e.keyCode == 43 || e.keyCode == 44 || e.keyCode == 47 || e.keyCode == 69 ) {
            return false;
        }
        soloNumeros(e.keyCode);
    });
    
    function soloNumeros(e) {
        var key = window.Event ? e.which : e.keyCode
            return (key >= 48 && key <= 57)
    }
</script>