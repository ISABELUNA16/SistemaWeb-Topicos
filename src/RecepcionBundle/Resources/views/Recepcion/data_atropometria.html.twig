{%if LstAntropometria.ateValAtropometria==0%}
    <div class="col-md-12" style="padding-bottom: 10px;"  >
        <input type="text" class="form-control" id="txtcod" name="txtcod" value="{{codigo}}" style="display: none">
    </div>
    <div class="col-md-4" style="padding-bottom: 10px;" >
        <label class="control-label">Peso</label>
        <input type="text" placeholder="PESO  EN KG" class="form-control" id="txtpeso" name="txtpeso">
    </div>
    <div class="col-md-4" style="padding-bottom: 10px;">
        <label class="control-label">Talla</label>
        <input type="text" placeholder="TALLA EN CM" class="form-control" id="txttalla" name="txttalla">
    </div>
    <div class="col-md-4" style="padding-bottom: 10px;" >
        <label class="control-label">Indice de Masa Corporal</label>
        <input type="text" placeholder="MASA CORPORAL" class="form-control" id="txtmasa" name="txtmasa" disabled>
    </div>
    <div class="col-md-4" style="padding-bottom: 10px;">
        <label class="control-label">Perimetro Abdominal</label>
        <input type="text" placeholder="PERIMETRO ABDOMINAL" class="form-control" id="txtperimetro" name="txtperimetro">
    </div>
    <div class="col-md-8" style="padding-bottom: 10px;">
        <label class="control-label">Estado Nutrucional</label>
        <input type="text" placeholder="ESTADO NUTRICIONAL" class="form-control" id="txtnutricion" name="txtnutricion" disabled>
    </div>
    <br>
    <div class="col-md-12" style="padding-bottom: 10px;padding-bottom: 10px;text-align: center;">
        <button type="button" class="btn red" id="btn_act_atropometria" name="btn_act_atropometria" onclick="GuardarAtropometria();">Registrar</button> 
    </div>
{%else%}
    <div class="col-md-12" style="padding-bottom: 10px;"  >
