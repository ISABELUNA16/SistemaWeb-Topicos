        <input type="text" class="form-control" id="txtcod" name="txtcod" value="{{codigo}}" style="display: none">
    </div>
    <div class="col-md-4" style="padding-bottom: 10px;" >
        <label class="control-label">Peso</label>
        <input type="number" placeholder="PESO EN KG." class="form-control" id="txtpeso" name="txtpeso" disabled value="{{LstAntropometria.atePeso}}">
    </div>
    <div class="col-md-4" style="padding-bottom: 10px;">
        <label class="control-label">Talla</label>
        <input type="number" placeholder="TALLA EN CM." class="form-control" id="txttalla" name="txttalla" disabled value="{{LstAntropometria.ateTalla}}">
