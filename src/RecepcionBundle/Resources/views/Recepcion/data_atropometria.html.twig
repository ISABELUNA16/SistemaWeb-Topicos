    </div>
    <div class="col-md-8" style="padding-bottom: 10px;">
        <label class="control-label">Estado Nutricional</label>
        <input type="number" placeholder="ESTADO NUTRICIONAL." class="form-control" id="txtnutricion" name="txtnutricion" disabled value="{{LstAntropometria.ateEstNutricional}}">
    </div>

{%endif%}    

<script type="text/javascript">
    
    jQuery('#txtpeso, #txttalla, #txtperimetro').on('keypress', function (e) {

        if (e.keyCode == 101 || e.keyCode == 45 || e.keyCode == 43 || e.keyCode == 44 || e.keyCode == 47 || e.keyCode == 69 ) {
            return false;
        }
        soloNumeros(e.keyCode);
    });
    
    function soloNumeros(e) {
        var key = window.Event ? e.which : e.keyCode
            return (key >= 48 && key <= 57)
    }
    
</script>