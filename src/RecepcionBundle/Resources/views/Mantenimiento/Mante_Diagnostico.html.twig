    </ul>
{% endblock %}

{% block body_content %}
    <div class="page-content-inner">
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN TODO SIDEBAR -->
                <div class="todo-ui">
                    <div class="todo-sidebar">
                        <div class="portlet light ">
                            <style>
                                .listbadge{
                                    color:#697882;
                                }
                                .profile-sidebar-portlet {
                                    padding: 0px 0 0!important;
                                }
                            </style>
                            <div class="portlet-body todo-project-list-content" style="height: auto;">
                                <div class="light profile-sidebar-portlet" style="border-bottom: 1px solid #eee;">
                                    <!-- SIDEBAR USERPIC -->
                                    <div class="profile-userpic">
                                        <img src="/sisweb/TopicoIPD/web/bundles/public/img/icon/maintenance.png" class="img-responsive" alt=""> </div>
                                    <!-- SIDEBAR USER TITLE -->
                                    <div class="profile-usertitle">
                                        <div class="profile-usertitle-job" style="color: #cb2f1d !important;">Menú</div>
                                    </div>
                                    <br>
                                    <!-- END MENU -->
                                </div>
                                <div class="todo-project-list" style="padding-top: 5px;">
                                    <ul class="nav nav-pills nav-stacked">
                                        <li class="active"> 
                                            <a class="listbadge" href="{{path('mantenimiento_diagnostico')}}" >
                                                <span class="badge badge-info badge-active" id="item1"> 0 </span>Diagnósticos
                                            </a>   
                                        </li>
                                        <li> 

                                            <a class="listbadge" href="{{path('mantenimiento_procedimiento')}}" >
                                                <span class="badge badge-info" id="item2"> 0 </span>Procedimientos
                                            </a>   
                                        </li>
                                        <li>
                                            <a class="listbadge" href="{{path('mantenimiento_medicamento')}}">
                                                <span class="badge badge-info" id="item3"> 0 </span>Medicamento
                                            </a>   
                                        </li>
                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END TODO SIDEBAR -->
                    <!-- BEGIN TODO CONTENT -->
                    <div class="todo-content">
                        <div class="portlet light ">
                            <!-- PROJECT HEAD -->
                            <div class="portlet-title">
                                <div class="caption">
                                    <span class="caption-helper">OPCIONES DE MANTENIMIENTOS :</span> &nbsp;
                                    <span class="caption-subject font-red bold uppercase"> DIAGNÓSTICO </span>
                                </div>
                            </div>
                            <!-- end PROJECT HEAD -->
                            <div class="portlet-body">
                                <div class="row">
                                    <div class="col-md-12 col-sm-7" style="border-bottom: 3px solid #cb2f1d;">
                                        <form action="#" class="form-horizontal">
                                            <!-- TASK HEAD -->
                                            <div class="form">
                                                <div class="form-group">
                                                    <div class="col-md-3" style="padding-right: 5px;">
                                                    <label class="control-label">Tipo de Diagnóstico</label>
                                                         <select class="form-control" id="cbotipodiagnostico" name="cbotipodiagnostico">
                                                            <option value="0">[Seleccionar]</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-1" style="padding-left: 0px;">
                                                        <label class="control-label" style="color: white">buton</label>
                                                        <button class="btn  btn-sm red" type="button" style="padding-left: 5px;padding-right: 5px;padding-bottom: 9px;" onclick="VerTipoDiagnostico()">
                                                            <i class="fa fa fa-search" style="padding-top: 2px;">
                                                            </i>
                                                        </button>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label class="control-label">Diagnóstico</label>
                                                        <input type="text" class="form-control todo-taskbody-tasktitle" placeholder="Ingrese aqui su descripcion " id="txtdescripcion" name="txtdescripcion">                                                         
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label class="control-label">Código</label>
                                                        <input type="text" class="form-control todo-taskbody-tasktitle" placeholder="Codigo " id="txtcodigo" name="txtcodigo">                                                         
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label class="control-label" style="color: white">buton</label>
                                                        <button class="btn  btn-sm red" type="button" onclick="GuardarDiagnostico();">Guardar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-lg-12 col-xs-12 col-sm-12">
                                        <div class="tab-content" id="viewtblDiagnostico">    
                                            
                                        </div>  
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END TODO CONTENT -->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
            
            <div class="modal fade" id="Modaltdiagnostico" tabindex="-1" role="basic" aria-hidden="true" style="display: none;top: 20%;"   data-keyboard="false" data-backdrop="static">               
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header ui-draggable-handle">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <p class="modal-title" id="title_examen">MANTENIMIENTO:  TIPO DE DIAGNÓSTICO</p>
                        </div>
                        <div class="modal-body">
                            <div class="portlet-body">
                                <div class="tab-content">
                                    
                                    <div class="form">
                                        <div class="form-group">
                                            <div class="col-md-9">
                                                <label class="control-label">Tipo de Diagnóstico</label>
                                                <input type="text" class="form-control todo-taskbody-tasktitle" placeholder="Ingrese nuevo tipo de diagnóstico " id="txttdiagnostico" name="txttdiagnostico">                                                         
                                            </div>
                                            <div class="col-md-2">
                                                <label class="control-label" style="color: white">buton</label>
                                                <button class="btn  btn-sm red" type="button" onclick="GuardarTdiagnostico();">Agregar</button>
                                            </div>
                                        </div>
                                    </div>
                                                   
                                    <div class="table-scrollable table-scrollable-borderless" style="padding-top: 20px;">
                                        <table class="table table-hover table-light">
                                            <thead>
                                                <tr class="uppercase">
                                                    <th> # </th>
                                                    <th> Descripción </th>
                                                    <th> Estado </th>
                                                    <th> Acción </th>
                                                </tr>
                                            </thead>
                                            <tbody id="viewtbltdiagnostico"> 
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>                   
                            </div>
                        </div>
                        <div class="modal-footer">                                

                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{global.pathRecursos}}/assets/global/plugins/select2/select2.css"/>
    <link rel="stylesheet" type="text/css" href="{{global.pathRecursos}}/assets/admin/pages/css/todo.css"/>
    <style>
