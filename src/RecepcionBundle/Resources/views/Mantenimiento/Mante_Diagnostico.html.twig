{% block pagePlugins %}
    <script type="text/javascript" src="{{global.pathRecursos}}/assets/global/plugins/select2/select2.min.js"></script>
    <script src="{{global.pathRecursos}}/assets/admin/pages/scripts/todo.js" type="text/javascript"></script>
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{global.pathRecursos}}/assets/global/scripts/metronic.js" type="text/javascript"></script>
    <script src="{{global.pathRecursos}}/assets/admin/layout3/scripts/layout.js" type="text/javascript"></script>
    <script src="{{global.pathRecursos}}/assets/admin/layout3/scripts/demo.js" type="text/javascript"></script>        
    <!-- END PAGE LEVEL SCRIPTS -->      
    {#    <script src="{{global.pathWeb}}/bundles/public/js/index.js"></script>  #}

    <script>
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core componets
            Layout.init(); // init layout
            Demo.init(); // init demo(theme settings page)
            Todo.init(); // init todo page
            ListarTipoDiagnostico();
            ListarDiagnotico();
        });
        
        function BorrarDiagnostico(codigo){
            var rsp;
            var formURL = "{{path('mante_borrar_diagnostico')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {codDiagnostico:codigo},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListarDiagnotico();
                            } else {
                                jAlert('info', 'Ocurrio error a guardar', 'Sistema de Topicos IPD', null);
                            }
                        }
                    });
        }
       
        function GuardarDiagnostico(){
            var rsp;
            var descripcion=$('#txtdescripcion').val();
            var codigo=$('#txtcodigo').val();
            var codigotipo=$('#cbotipodiagnostico').val();
            
            var formURL = "{{path('mante_guardar_diagnostico')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {descripcion:descripcion,codigo:codigo,codigotipo:codigotipo},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListarDiagnotico();
                                $('#txtdescripcion').val(''); 
                                $('#txtcodigo').val('');
                                $('#cbotipodiagnostico').val(0);
                            } else {
                                jAlert('info', 'Ocurrio error a guardar', 'Sistema de Topicos IPD', null);
                            }
                        }
                    });
        }
        
        function ListarDiagnotico(){
            var formURL = "{{path('mante_tbl_diagnostico')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {},
                        success: function (data, textStatus, jqXHR)
                        {
                            $('#viewtblDiagnostico').html(data);
                        }
                    });
        }
        
        
        
        function ListarTipoDiagnostico(){
            var formURL = "{{path('mante_tdiagnostico')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {},
                        success: function (data, textStatus, jqXHR)
                        {
                            $('#cbotipodiagnostico').html(data);
                        }
                    });
        }
        
        function ListaTblTipoDiagnostico(){
            var formURL = "{{path('mante_tbl_tdiagnostico')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {},
                        success: function (data, textStatus, jqXHR)
                        {
                            $('#viewtbltdiagnostico').html(data);
                        }
                    });
        }
        
        function GuardarTdiagnostico(){
            var rsp;
            var tdiagnostico=$('#txttdiagnostico').val();
            var formURL = "{{path('mante_guardar_tdiagnostico')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {tdiagnostico:tdiagnostico},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListarTipoDiagnostico();
                                ListaTblTipoDiagnostico();
                                $('#txttdiagnostico').val('');    
                            } else {
                                jAlert('info', 'Ocurrió un error al guardar.', 'Sistema de Tópicos IPD', null);
                            }
                        }
                    });
        }
        
        function DeleteTdiagnostico(codtdiagnostico){
            var rsp;
            var formURL = "{{path('mante_delete_tdiagnostico')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {codtdiagnostico:codtdiagnostico},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListaTblTipoDiagnostico(); 
                                ListarTipoDiagnostico();
                            } else {
                                jAlert('info', 'Ocurrió un error al guardar', 'Sistema de Tópicos IPD', null);
                            }
                        }
                    });
        }
        
        function VerTipoDiagnostico() {
            ListaTblTipoDiagnostico();
            $('#Modaltdiagnostico').modal('toggle');
        }

    </script>
{% endblock %}

