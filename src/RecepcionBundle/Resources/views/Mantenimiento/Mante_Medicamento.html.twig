{% block pagePlugins %}
    <script type="text/javascript" src="{{global.pathRecursos}}/assets/global/plugins/select2/select2.min.js"></script>
    <script src="{{global.pathRecursos}}/assets/admin/pages/scripts/todo.js" type="text/javascript"></script>
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{global.pathRecursos}}/assets/global/scripts/metronic.js" type="text/javascript"></script>
    <script src="{{global.pathRecursos}}/assets/admin/layout3/scripts/layout.js" type="text/javascript"></script>
    <script src="{{global.pathRecursos}}/assets/admin/layout3/scripts/demo.js" type="text/javascript"></script>        
    <!-- END PAGE LEVEL SCRIPTS -->      
    {#    <script src="{{global.pathWeb}}/bundles/public/js/index.js"></script>  #}

    <script>
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core componets
            Layout.init(); // init layout
            Demo.init(); // init demo(theme settings page)
            Todo.init(); // init todo page
            ListarTipoMedicamento();
            ListarMedicamentos();
        });
        
        function BorrarMedicamento(codigo){
            var rsp;
            var formURL = "{{path('mante_borrar_medicamento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {codMedicamento:codigo},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListarMedicamentos();
                            } else {
                                jAlert('info', 'Ocurrió un error al guardar', 'Sistema de Tópicos IPD', null);
                            }
                        }
                    });
        }
       
        function ListaTblTipoMedicamento(){
            var formURL = "{{path('mante_tbl_tmedicamento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {},
                        success: function (data, textStatus, jqXHR)
                        {
                            $('#viewtbltmedicamento').html(data);
                        }
                    });
        }

        function GuardarMedicamento(){
            var rsp;
            var descripcion=$('#txtdescripcion').val();
            var codigotipo=$('#cbotipomedicamento').val();
         
            var formURL = "{{path('mante_guardar_medicamento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {descripcion:descripcion, codigotipo:codigotipo},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListarMedicamentos();
                                $('#txtdescripcion').val(''); 
                            } else {
                                jAlert('info', 'Ocurrió un error al guardar', 'Sistema de Tópicos IPD', null);
                            }
                        }
                    });
        }
        
        function ListarMedicamentos(){
            var formURL = "{{path('mante_tbl_medicamento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {},
                        success: function (data, textStatus, jqXHR)
                        {
                            $('#viewtblMedicamento').html(data);
                        }
                    });
        }
        
        function ListarTipoMedicamento(){
        var formURL = "{{path('mante_tmedicamento')}}";
        $.ajax(
                {
                    url: formURL,
                    type: "POST",
                    data: {},
                    success: function (data, textStatus, jqXHR)
                    {
                        $('#cbotipomedicamento').html(data);
                    }
                });
        }

        function DeleteTmedicamento(codtmedicamento){
            var rsp;
            var formURL = "{{path('mante_delete_tmedicamento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {codtmedicamento:codtmedicamento},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListaTblTipoMedicamento(); 
                                ListarTipoMedicamento();
                            } else {
                                jAlert('info', 'Ocurrió un error al guardar', 'Sistema de Tópicos IPD', null);
                            }
                        }
                    });
        }


        function VerTipoMedicamento(){
            ListaTblTipoMedicamento();
            $('#Modaltmedicamento').modal('toggle');
        }
        
        

    </script>
{% endblock %}

