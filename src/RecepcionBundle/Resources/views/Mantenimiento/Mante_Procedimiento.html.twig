{% block pagePlugins %}
    <script type="text/javascript" src="{{global.pathRecursos}}/assets/global/plugins/select2/select2.min.js"></script>
    <script src="{{global.pathRecursos}}/assets/admin/pages/scripts/todo.js" type="text/javascript"></script>
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{global.pathRecursos}}/assets/global/scripts/metronic.js" type="text/javascript"></script>
    <script src="{{global.pathRecursos}}/assets/admin/layout3/scripts/layout.js" type="text/javascript"></script>
    <script src="{{global.pathRecursos}}/assets/admin/layout3/scripts/demo.js" type="text/javascript"></script>        
    <!-- END PAGE LEVEL SCRIPTS -->      
    {#    <script src="{{global.pathWeb}}/bundles/public/js/index.js"></script>  #}

    <script>
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core componets
            Layout.init(); // init layout
            Demo.init(); // init demo(theme settings page)
            Todo.init(); // init todo page
            ListarTipoProcedimiento();
            ListarProcedimiento();
        });
        
        function BorrarProcedimiento(codigo){
            var rsp;
            var formURL = "{{path('mante_borrar_procedimiento')}}";
            console.log('enviando');
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {codProcedimiento:codigo},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                             console.log(rsp);
                            if (rsp.result) {

                                ListarProcedimiento();
                            } else {
                                jAlert('info', 'Ocurrio error a guardar', 'Sistema de Topicos IPD', null);
                            }
                        }
                    });
        }
       
        function GuardarProcedimiento(){
            var rsp;
            var descripcion=$('#txtdescripcion').val();
            var codigotipo=$('#cbotipoprocedimiento').val();
         
            var formURL = "{{path('mante_guardar_procedimiento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {descripcion:descripcion, codigotipo:codigotipo},
                        success: function (data, textStatus, jqXHR)
                        {
                            rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListarProcedimiento();
                                $('#txtdescripcion').val(''); 
                            } else {
                                jAlert('info', 'Ocurrió un error al guardar', 'Sistema de Tópicos IPD', null);
                            }
                        }
                    });
        }
        
        function ListarProcedimiento(){
            var formURL = "{{path('mante_tbl_procedimiento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {},
                        success: function (data, textStatus, jqXHR)
                        {
                            $('#viewtblProcedimiento').html(data);
                        }
                    });
        }
        
        function ListarTipoProcedimiento(){
        var formURL = "{{path('mante_tprocedimiento')}}";
        $.ajax(
                {
                    url: formURL,
                    type: "POST",
                    data: {},
                    success: function (data, textStatus, jqXHR)
                    {
                        $('#cbotipoprocedimiento').html(data);
                    }
                });
        }

        function ListaTblTipoProcedimiento(){
            var formURL = "{{path('mante_tbl_tprocedimiento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {},
                        success: function (data, textStatus, jqXHR)
                        {
                            $('#viewtbltprocedimiento').html(data);
                        }
                    });
        }

        function GuardarTprocedimiento(){
            var rsp;
            var tprocedimiento=$('#txttprocedimiento').val();
            console.log(tprocedimiento);
            var formURL = "{{path('mante_guardar_tprocedimiento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {tprocedimiento:tprocedimiento},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListarTipoProcedimiento();
                                ListaTblTipoProcedimiento();
                                $('#txttprocedimiento').val('');    
                            } else {
                                jAlert('info', 'Ocurrió error al guardar', 'Sistema de Tópicos IPD', null);
                            }
                        }
                    });
        }
        
         function DeleteTprocedimiento(codtprocedimiento){
            var rsp;
            var formURL = "{{path('mante_delete_tprocedimiento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {codtprocedimiento:codtprocedimiento},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListaTblTipoProcedimiento(); 
                                ListarTipoProcedimiento();
                            } else {
                                jAlert('info', 'Ocurrio error a guardar', 'Sistema de Topicos IPD', null);
                            }
                        }
                    });
        }

        function VerTipoProcedimiento() {
            ListaTblTipoProcedimiento();
            $('#Modaltprocedimiento').modal('toggle');
        }

    </script>
{% endblock %}

