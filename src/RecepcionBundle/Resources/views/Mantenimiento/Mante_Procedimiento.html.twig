{% extends 'base.html.twig' %}
{% block page_head %}
    <div class="page-head">
        <div class="container">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1><strong style="font-family: monospace;">TOPICO</strong> <small>Sistema Web</small></h1>
            </div>
            <!-- END PAGE TITLE -->                    
        </div>
    </div>
{% endblock %}

{% block breadcrumb %}
    <ul class="page-breadcrumb breadcrumb">
        <li class="active">Registro de Mantenimiento</li><i class="fa fa-circle"></i> 
    </ul>
{% endblock %}

{% block body_content %}
    <div class="page-content-inner">
        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN TODO SIDEBAR -->
                <div class="todo-ui">
                    <div class="todo-sidebar">
                        <div class="portlet light ">
                            <style>
                                .listbadge{
                                    color:#697882;
                                }
                                .profile-sidebar-portlet {
                                    padding: 0px 0 0!important;
                                }
                            </style>
                            <div class="portlet-body todo-project-list-content" style="height: auto;">
                                <div class="light profile-sidebar-portlet" style="border-bottom: 1px solid #eee;">
                                    <!-- SIDEBAR USERPIC -->
                                    <div class="profile-userpic">
                                        <img src="/sisweb/TopicoIPD/web/bundles/public/img/icon/maintenance.png" class="img-responsive" alt=""> </div>
                                    <!-- SIDEBAR USER TITLE -->
                                    <div class="profile-usertitle">
                                        <div class="profile-usertitle-job" style="color: #cb2f1d !important;">Menu</div>
                                    </div>
                                    <br>
                                    <!-- END MENU -->
                                </div>
                                <div class="todo-project-list" style="padding-top: 5px;">
                                    <ul class="nav nav-pills nav-stacked" id="items">
                                        <li > 
                                            <a class="listbadge" href="{{path('mantenimiento_diagnostico')}}">
                                                <span class="badge badge-info " id="item1"> 0 </span>Diagnosticos
                                            </a>   
                                        </li>
                                        <li class="active"> 
                                            <a class="listbadge" href="{{path('mantenimiento_procedimiento')}}">
                                                <span class="badge badge-info badge-active"  id="item2"> 0 </span>Procedimientos
                                            </a>   
                                        </li>
                                        <li>
                                            <a class="listbadge" href="{{path('mantenimiento_medicamento')}}">
                                                <span class="badge badge-info" id="item3"> 0 </span>Medicamento
                                            </a>   
                                        </li>
                                        
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END TODO SIDEBAR -->
                    <!-- BEGIN TODO CONTENT -->
                    <div class="todo-content">
                        <div class="portlet light ">
                            <!-- PROJECT HEAD -->
                            <div class="portlet-title">
                                <div class="caption">
                                    <span class="caption-helper">MANTENIMIENTOS :</span> &nbsp;
                                    <span class="caption-subject font-red bold uppercase"> PROCEDIMIENTO </span>
                                </div>
                            </div>
                            <!-- end PROJECT HEAD -->
                            <div class="portlet-body">
                                <div class="row">
                                    <div class="col-md-12 col-sm-7" style="border-bottom: 3px solid #cb2f1d;">
                                        <form action="#" class="form-horizontal">
                                            <!-- TASK HEAD -->
                                            <div class="form">
                                                <div class="form-group">
                                                    <div class="col-md-6">
                                                        <label class="control-label">Procedimiento</label>
                                                        <input type="text" class="form-control todo-taskbody-tasktitle" placeholder="Ingrese aqui su descripcion " id="txtdescripcion" name="txtdescripcion">                                                         
                                                    </div>
                                                    <div class="col-md-2">
                                                        <label class="control-label" style="color: white">buton</label>
                                                        <button class="btn  btn-sm red" type="button" onclick="GuardarProcedimiento();">Guardar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-lg-12 col-xs-12 col-sm-12">
                                        <div class="tab-content" id="viewtblDiagnostico">    
                                            
                                        </div>  
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END TODO CONTENT -->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
            
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{global.pathRecursos}}/assets/global/plugins/select2/select2.css"/>
    <link rel="stylesheet" type="text/css" href="{{global.pathRecursos}}/assets/admin/pages/css/todo.css"/>
    <style>
        .page-header .page-header-top .page-logo .logo-default {
            margin: 10px 0 0 0;
        }
        .todo-project-list .nav-pills > li.active > a {
            background-color: #cb2f1d !important;
        }

        .todo-project-list .nav li a .badge {
            background-color: #cb2f1d !important;
        }

        .todo-project-list .nav li a .badge-active {
            background-color: #ffffff !important;
        }
    </style>
{% endblock %}

{% block pagePlugins %}
    <script type="text/javascript" src="{{global.pathRecursos}}/assets/global/plugins/select2/select2.min.js"></script>
    <script src="{{global.pathRecursos}}/assets/admin/pages/scripts/todo.js" type="text/javascript"></script>
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="{{global.pathRecursos}}/assets/global/scripts/metronic.js" type="text/javascript"></script>
    <script src="{{global.pathRecursos}}/assets/admin/layout3/scripts/layout.js" type="text/javascript"></script>
    <script src="{{global.pathRecursos}}/assets/admin/layout3/scripts/demo.js" type="text/javascript"></script>        
    <!-- END PAGE LEVEL SCRIPTS -->      
    {#    <script src="{{global.pathWeb}}/bundles/public/js/index.js"></script>  #}

    <script>
        jQuery(document).ready(function () {
            Metronic.init(); // init metronic core componets
            Layout.init(); // init layout
            Demo.init(); // init demo(theme settings page)
            Todo.init(); // init todo page
            ListarProcedimiento();
        });
        
        function BorrarProcedimiento(codigo){
            var rsp;
            var formURL = "{{path('mante_borrar_procedimiento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {codProcedimiento:codigo},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListarProcedimiento();
                            } else {
                                jAlert('info', 'Ocurrio error a guardar', 'Sistema de Topicos IPD', null);
                            }
                        }
                    });
        }
       
        function GuardarProcedimiento(){
            var rsp;
            var descripcion=$('#txtdescripcion').val();
         
            var formURL = "{{path('mante_guardar_procedimiento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {descripcion:descripcion},
                        success: function (data, textStatus, jqXHR)
                        {
                             rsp = JSON.parse(data);
                            if (rsp.result) {
                                ListarProcedimiento();
                                $('#txtdescripcion').val(''); 
                            } else {
                                jAlert('info', 'Ocurrio error a guardar', 'Sistema de Topicos IPD', null);
                            }
                        }
                    });
        }
        
        function ListarProcedimiento(){
            var formURL = "{{path('mante_tbl_procedimiento')}}";
            $.ajax(
                    {
                        url: formURL,
                        type: "POST",
                        data: {},
                        success: function (data, textStatus, jqXHR)
                        {
                            $('#viewtblDiagnostico').html(data);
                        }
                    });
        }
        
        
        

    </script>
{% endblock %}

