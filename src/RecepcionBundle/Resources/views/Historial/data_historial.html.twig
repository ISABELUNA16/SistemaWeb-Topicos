<div id="lstdiagnostico" style="display: none">
    {%if resultD%} 
        
            <div class="tab-content"> 
                <div class="mt-actions">
                    <p class="font-dark bold uppercase" style="margin-top: 10px;margin-bottom: 5px;border-bottom: 1px solid #eeeeee;">LISTA DE DIAGNOSTICOS</p>
                    {%for lst in lstAdiagnostico%}
                    <div class="mt-action">
                        <div class="mt-action-body">
                            <div class="mt-action-row">
                                <div class="mt-action-info ">
                                    <div class="mt-action-icon ">
                                        <i class="fa fa-stethoscope"></i>
                                    </div>
                                    <div class="mt-action-details ">
                                        <span class="mt-action-author" style="    font-size: 12px;">Doctor : {{lst.nom}} {{lst.ap}}</span>
                                        <p class="mt-action-desc" style="margin-top: 0px;">{{lst.descripcion}}</p>
                                    </div>
                                </div>
                                <div class="mt-action-datetime">
                                    <span class="mt-action-date"><i class="fa fa-medkit"></i> A01</span>
                                </div>
                                <div class="mt-action-buttons">
                                    <div class="btn-group btn-group-circle">
                                        <button {%if lst.tipo==0 or lst.tipo!=1%}class="btn btn-xs default btn-circle" {%elseif lst.tipo==1%}class="btn btn-xs red btn-circle" {%endif%}  style="margin-left: 0px;margin-right: 0px;">D</button>
                                    </div>
                                    <div class="btn-group btn-group-circle">
                                        <button {%if lst.tipo==0 or lst.tipo!=2%}class="btn btn-xs default btn-circle" {%elseif lst.tipo==2%}class="btn btn-xs red btn-circle" {%endif%} style="margin-left: 0px;margin-right: 0px;">P</button>
                                    </div>
                                    <div class="btn-group btn-group-circle">
                                        <button {%if lst.tipo==0 or lst.tipo!=3%}class="btn btn-xs default btn-circle" {%elseif lst.tipo==3%}class="btn btn-xs red btn-circle" {%endif%}  style="margin-left: 0px;margin-right: 0px;">C</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                     {%endfor%}                
                </div>
            </div>
       
    {%else%}
        <div class="col-md-8 col-md-offset-3"> 
            <div class="mt-actions">
                <div class="mt-action">
                    <div class="mt-action-img">
                        <img src="{{asset('bundles/public/img/icon/alert.png')}}" style="width: 100%;" > </div>
                    <div class="mt-action-body">
                        <div class="mt-action-row">
                            <div class="mt-action-info">
                                <div class="mt-action-details ">
                                    <p class="mt-action-desc">Sin registros de Diagnosticos existentes</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {%endif%}                        
</div>
